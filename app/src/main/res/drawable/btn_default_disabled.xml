<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arkaplan rengi (devre dışı bırakıldığında farklı bir renk kullanabilirsiniz) -->
    <solid android:color="#CCCCCC"/> <!-- Örneğin, gri renk -->

    <!-- Köşeleri yuvarlatma (isteğe bağlı) -->
    <corners android:radius="8dp"/>

    <!-- Kenarlık rengi ve kalınlığı (isteğe bağlı) -->
    <stroke
        android:width="2dp"
        android:color="#999999"/> <!-- Örneğin, daha koyu bir gri renk ve 2dp kalınlık -->
</shape>