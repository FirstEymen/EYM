<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Daireyi çerçeve olarak çiz -->
    <item android:width="12dp" android:height="12dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/gray_a" /> <!-- Gri iç dolgu rengi -->
            <stroke
                android:width="0.1dp"
                android:color="@android:color/black" /> <!-- Siyah çerçeve rengi -->
        </shape>
    </item>
    <!-- Artı işareti -->
    <item android:width="1dp" android:height="7dp" android:gravity="center">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Artı işareti rengi (gri) -->
        </shape>
    </item>
    <item android:width="7dp" android:height="1dp" android:gravity="center">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Artı işareti rengi (gri) -->
        </shape>
    </item>
</layer-list>