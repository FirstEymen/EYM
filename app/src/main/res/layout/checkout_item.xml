<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/g_white"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/lineCheckoutLayout"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/g_line"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/checkoutImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/checkoutImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/lineCheckoutLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:src="@color/g_blue">
        </ImageView>

        <TextView
            android:id="@+id/checkoutImageName"
            android:layout_width="180dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="Nike Dunk"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/checkoutImage"
            app:layout_constraintTop_toTopOf="@id/checkoutImage"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/checkoutImageSize"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="XL"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/checkoutImageName"
            app:layout_constraintTop_toBottomOf="@id/checkoutImageName"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/checkoutImagePrice"
            android:layout_width="wrap_content"
            android:text="$500"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/checkoutImageSize"
            app:layout_constraintTop_toBottomOf="@id/checkoutImageSize"
            android:layout_height="wrap_content">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>