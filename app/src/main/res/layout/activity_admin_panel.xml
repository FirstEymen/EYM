<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:id="@+id/productAdd"
       android:layout_width="139dp"
       android:layout_height="172dp"
       android:layout_marginStart="40dp"
       android:layout_marginTop="40dp"
       android:background="@drawable/product"
       android:gravity="center"
       android:onClick="selectProduct"
       android:paddingEnd="40dp"
       android:paddingBottom="150dp"
       android:text="Add Product"
       android:textStyle="bold">
   </TextView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="136dp"
       android:layout_height="172dp"
       android:paddingEnd="10dp"
       android:layout_marginStart="230dp"
       android:layout_marginTop="50dp"
       app:srcCompat="@drawable/category" />

   <TextView
       android:id="@+id/categoryAdd"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="240dp"
       android:layout_marginTop="40dp"
       android:gravity="center"
       android:onClick="selectCategory"
       android:paddingEnd="40dp"
       android:paddingBottom="150dp"
       android:text="Add Category"
       android:textStyle="bold">
   </TextView>

   <ImageView
       android:id="@+id/editCategoryImage"
       android:layout_width="136dp"
       android:layout_height="172dp"
       android:paddingEnd="10dp"
       android:layout_marginStart="230dp"
       android:layout_marginTop="260dp"
       app:srcCompat="@drawable/editcategory"/>

   <TextView
       android:id="@+id/categoryEdit"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="240dp"
       android:layout_marginTop="250dp"
       android:gravity="center"
       android:onClick="selectCategory"
       android:paddingEnd="40dp"
       android:paddingBottom="150dp"
       android:text="Edit Category"
       android:textStyle="bold">
   </TextView>

</FrameLayout>

   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="172dp"
          android:layout_height="206dp"
          android:layout_marginStart="10dp"
          android:layout_marginTop="250dp"
          app:srcCompat="@drawable/edit" />

      <TextView
          android:id="@+id/productEdit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="40dp"
          android:layout_marginTop="250dp"
          android:gravity="center"
          android:paddingEnd="40dp"
          android:paddingBottom="150dp"
          android:text="Edit Product"
          android:textStyle="bold">
      </TextView>

   </FrameLayout>

</RelativeLayout>