<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/g_card_background"
    android:elevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <ImageView
            android:id="@+id/img_carouselRv_item"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/carouselRvName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/Name"
            app:layout_constraintStart_toEndOf="@id/img_carouselRv_item"
            app:layout_constraintTop_toTopOf="@id/img_carouselRv_item"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/carouselRvNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/OfferPercentage"
            app:layout_constraintTop_toBottomOf="@id/carouselRvName"
            app:layout_constraintStart_toEndOf="@id/carouselRvOldPrice"
            android:textColor="@color/g_blue_gray200"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/carouselRvOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/Price"
            app:layout_constraintStart_toStartOf="@id/carouselRvName"
            app:layout_constraintTop_toBottomOf="@id/carouselRvName"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>